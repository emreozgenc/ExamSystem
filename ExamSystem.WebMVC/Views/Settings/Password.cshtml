@model PasswordModel
@{
    Layout = "_SecondaryLayout";
}

<h2 class="text-center text-primary mt-8">Şifre Değiştir</h2>
<div class="row">
    <div class="col-10 col-sm-8 col-md-6 col-lg-4 card mx-auto mt-2">
        @if (ViewBag.ErrorMessages != null)
        {
            <div class="alert alert-danger mb-2">
                <ul>
                    @foreach (var message in ViewBag.ErrorMessages)
                    {
                        <li>@message</li>
                    }
                </ul>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-2"></div>
        <form asp-controller="Settings" asp-action="Password" method="post">
            <div class="form__group">
                <label class="form__label" asp-for="Password"></label>
                <input class="form__input" asp-for="Password" />
            </div>
            <div class="form__group">
                <label class="form__label" asp-for="PasswordCopy"></label>
                <input class="form__input" asp-for="PasswordCopy" />
            </div>
            <button class="btn btn-primary btn-block mt-2">Şifre Değiştir</button>
        </form>
    </div>
</div>