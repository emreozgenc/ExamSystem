@model RegisterModel

@{
    Layout = "_SecondaryLayout";
}

<h2 class="text-primary text-center mt-8">Kayıt Ol</h2>
<div class="row">
    <div class="col-10 col-sm-8 col-md-6 col-lg-4 card mx-auto mt-2">
        @if(ViewBag.ErrorMessages != null)
        {
            <div class="alert alert-danger mb-2">
                <ul>
                    @foreach(var message in ViewBag.ErrorMessages)
                    {
                        <li>@message</li>
                    }
                </ul>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-2"></div>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="row">
                <div class="col-6 form__group">
                    <label class="form__label" asp-for="FirstName"></label>
                    <input class="form__input" asp-for="FirstName" />
                </div>
                <div class="col-6 form__group">
                    <label class="form__label" asp-for="LastName"></label>
                    <input class="form__input" asp-for="LastName" />
                </div>
            </div>
            <div class="form__group">
                <label class="form__label" asp-for="UserName"></label>
                <input class="form__input" asp-for="UserName" />
            </div>
            <div class=row>
                <div class="col-6 form__group">
                    <label class="form__label" asp-for="Password"></label>
                    <input class="form__input" asp-for="Password" />
                </div>
                <div class="col-6 form__group">
                    <label class="form__label" asp-for="PasswordCopy"></label>
                    <input class="form__input" asp-for="PasswordCopy" />
                </div>
            </div>
            <div class=row>
                <div class="col-6 form__group">
                    <label class="form__label" asp-for="EMail"></label>
                    <input class="form__input" asp-for="EMail" />
                </div>
                <div class="col-6 form__group">
                    <label class="form__label" asp-for="Phone"></label>
                    <input class="form__input" asp-for="Phone" />
                </div>
            </div>
            <div class="form__group">
                <label class="form__label" asp-for="Role"></label>
                <select class="form__select" asp-for="Role">
                    <option value="1">Öğretmen</option>
                    <option value="2" selected="">Öğrenci</option>
                </select>
            </div>
            <div class="text text-sm mt-1"><span class="text-danger">*</span> işaretli alanlar zorunlu değildir.</div>
            <button class="btn btn-primary btn-block mt-2">Kaydını Tamamla</button>
        </form>
    </div>
</div>