@model ExamCreateQuestionModel

<h2 class="text-disabled-t mt-8"><i class="text-primary fa-solid fa-square-plus"></i> Soru Ekle - @Model.LessonName</h2>
<div class="row">
    <div class="col-12 col-md-6 col-lg-4 mx-auto mt-2">
        @if (ViewBag.ErrorMessages != null)
        {
            <div class="alert alert-danger mb-2">
                <ul>
                    @foreach (var message in ViewBag.ErrorMessages)
                    {
                        <li>@message</li>
                    }
                </ul>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-2"></div>
    </div>
</div>

<form class="form" asp-controller="Exam" asp-action="CreateQuestion" method="post">

    <div class="row row-align-stretch">
        <div class="col-12 col-md-6">
            <div class="card" style="height: 100%;">
                <div class="form__group">
                    <label asp-for="ExamId" class="form__label"></label>
                    <input class="form__input" readonly asp-for="ExamId" />
                </div>
                <div class="form__group">
                    <label asp-for="Text" class="form__label"></label>
                    <textarea asp-for="Text" rows="5" class="form__input" style="resize:none"></textarea>
                </div>
                <div class="form__group">
                    <label asp-for="Info" class="form__label"></label>
                    <textarea asp-for="Info" rows="5" class="form__input" style="resize:none"></textarea>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="card">
                @for (int i = 0; i < Model.Answers.Length; i++)
                {
                    <div class="form__group">
                        <label class="form__label">@(i+1). Cevap</label>
                        <input class="form__input" required asp-for="@Model.Answers[i]" />
                    </div>
                }
                <div class="form__group">
                    <label class="form__label" asp-for="CorrectAnswerIndex"></label>
                    <input class="form__input" asp-for="CorrectAnswerIndex" value="1" min="1" max="@Model.Answers.Length" />
                </div>
                <button type="submit" class="btn btn-primary btn-block-fit mt-3 ml-auto">Soru Ekle</button>
            </div>
        </div>
    </div>
</form>

