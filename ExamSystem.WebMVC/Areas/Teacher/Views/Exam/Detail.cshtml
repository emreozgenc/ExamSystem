@model ExamDetailModel

@{
    var exam = Model.Exam;
    var teacher = Model.Exam.Teacher;
}

<h2 class="text-center text-disabled-t mt-5"><i class="fa-solid fa-circle-info text-primary"></i> Sınav Bilgileri</h2>
<div class="card col-12 col-md-10 col-xl-8 mx-auto mt-2">
    <div class="row row-align-flex-start">
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <span class="text-bold text-primary">Ders Adı : </span>
                </div>
                <div class="col-6">
                    <span>@exam.LessonName</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <span class="text-bold text-primary">Başlama tarihi : </span>
                </div>
                <div class="col-6">
                    <span>@exam.StartTime</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <span class="text-bold text-primary">Bitiş tarihi : </span>
                </div>
                <div class="col-6">
                    <span>@exam.FinishTime</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <span class="text-bold text-primary">Sınav Süresi : </span>
                </div>
                <div class="col-6">
                    <span>@(exam.FinishTime.Subtract(exam.StartTime).TotalMinutes) dakika</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <span class="text-bold text-primary">Seçenek sayısı : </span>
                </div>
                <div class="col-6">
                    <span>@exam.AnswerCount</span>
                </div>
            </div>
        </div>
        <div class="col-3 ml-auto">
            <a href="#" class="btn btn-primary btn-sm btn-block"><i class="fa-solid fa-plus"></i> Soru Ekle</a>
            <a href="#" class="btn btn-warning btn-sm btn-block mt-1"><i class="fa-solid fa-plus"></i> Öğrenci Ekle</a>
            <form asp-controller="Exam" asp-action="Delete" method="post">
                <input name="examId" value="@exam.ExamId" type="hidden" />
                <button class="btn btn-danger btn-sm btn-block mt-1" type="submit"><i class="fa-solid fa-eraser"></i> Sınavı Si</button>
            </form>
        </div>
    </div>
</div>
