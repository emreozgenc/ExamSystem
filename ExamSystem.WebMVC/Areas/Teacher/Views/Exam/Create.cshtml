@model ExamCreateModel

<h2 class="text-primary text-center mt-8">Sınav ekle</h2>
<div class="row">
    <div class="col-10 col-sm-8 col-md-6 col-lg-4 card mx-auto mt-2">
        @if(ViewBag.ErrorMessages != null)
        {
            <div class="alert alert-danger mb-2">
                <ul>
                    @foreach(var message in ViewBag.ErrorMessages)
                    {
                        <li>@message</li>
                    }
                </ul>
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-2"></div>
        <form asp-controller="Exam" asp-action="Create" method="post">
            <div class="form__group">
                <label class="form__label" asp-for="LessonName"></label>
                <input class="form__input" asp-for="LessonName" />
            </div>
            <div class="form__group">
                <label class="form__label" asp-for="AnswerCount"></label>
                <input class="form__input" asp-for="AnswerCount" />
            </div>
            <div class="form__group">
                <label class="form__label" asp-for="StartTime"></label>
                <input class="form__input" asp-for="StartTime" />
            </div>
            <div class="form__group">
                <label class="form__label" asp-for="FinishTime"></label>
                <input class="form__input" asp-for="FinishTime" />
            </div>
            <button class="btn btn-primary btn-block mt-2">Kaydını Tamamla</button>
        </form>
    </div>
</div>